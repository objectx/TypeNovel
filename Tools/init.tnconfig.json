{
  "warnDuplicateConstraint": true,
  "warnUndefinedConstraint": true,
  "warnUnannotatedConstraint": true,
  "markupMap": {
    "@pre": {
      "whiteSpace": "pre"
    },
    "@scene": {
      "tagName": "div",
      "className": "<name> <arg2>"
    },
    "//": "[example]",
    "//": "@speak('John'){ speech text here }",
    "@speak": {
      "tagName": "div",
      "className": "speak",
      "attributes": {
        "data-character": "<arg1>"
      }
    },
    "//": "[example]",
    "//": "$ruby('漢字', 'かんじ')",
    "$ruby": {
      "validate": false,
      "content": "<arg1><rt><arg2></rt>"
    }
  }
}
