{
  "warnDuplicateConstraint": true,
  "warnUndefinedConstraint": true,
  "warnUnannotatedConstraint": true,
  "markupMap": {
    "//": "[example]",
    "//": "@chapter('prologue', 2)",
    "@chapter": {
      "before": "<h<arg2>>",
      "after": "</h<arg2>>",
      "content": "<arg1>"
    },
    "@pre": {
      "whiteSpace": "pre"
    },
    "@nonvalidate": {
      "validate": false
    },
    "@scene": {
      "tagName": "div",
      "className": "<name> <arg2>"
    },
    "//": "[example]",
    "//": "@speak('John')",
    "@speak": {
      "tagName": "div",
      "className": "speak",
      "attributes": {
        "data-character": "<arg1>"
      },
      "//": "Japanese style quotations",
      "before": "&#x300c;",
      "after": "&#x300d;"
    },
    "//": "[example]",
    "//": "$ruby('漢字', 'かんじ')",
    "$ruby": {
      "validate": false,
      "content": "<arg1><rt><arg2></rt>"
    }
  }
}
