#!/bin/bash
# $0 - Script path
# $1 - Package path
# $2 - Target location
# $3 - Target volume`

# chmod +x /Applications/TypeNovel.App/tnc
chmod +x $2/tnc

unlink /usr/local/bin/tnc

# ln -s /Applications/TypeNovel.App/tnc /usr/local/bin/
ln -s $2/tnc /usr/local/bin/

# rm -rf /Applications/TypeNovel.App.tmp
rm -rf $2.tmp
